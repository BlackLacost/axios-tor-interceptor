{
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true // For work merging declaration in ts-node
  },
  "include": ["src/**/*.ts", "example/**/*.ts", ".eslintrc.js", "types.d.ts"],
  "exclude": ["node_modules"]
}
